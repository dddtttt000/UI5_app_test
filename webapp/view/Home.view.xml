;<mvc:View
  controllerName="project1.controller.Home"
  displayBlock="true"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns="sap.m"
>
  <Page id="page" title="{i18n>title}">
    <ScrollContainer
      height="100%"
      width="100%"
      horizontal="true"
      vertical="true"
    >
      <FlexBox direction="Column" renderType="Div" class="sapUiSmallMargin">
        <FlexBox>
          <Button text="Correctly Displayed" press="onCorrectPathClick" />
          <Button text="Loading Error" press="onIncorrectPathClick" />
        </FlexBox>
        <PDFViewer
          id="_IDGenPDFViewer1"
          source="{/Source}"
          title="{/Title}"
          height="{/Height}"
        >
          <layoutData>
            <FlexItemData growFactor="1" />
          </layoutData>
        </PDFViewer>
      </FlexBox>
      <Button text="create signature" press="" />
    </ScrollContainer>
  </Page>
</mvc:View>
